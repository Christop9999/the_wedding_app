<% if @wedding %>
<h1><%= @wedding.name %></h1>
<p>Do you really want to friend <%= @wedding.name %> ? </p>
<%= form_for @wedding_guest, method: :post do |form| %>
	<div class = "form for-actions">
		<%= form.hidden_field :wedding_id %>
		<%= submit_tag "Yes, Add Friend", class: 'btn btn-primary' %>
		<%= link_to "Cancel", weddings_path, class: 'btn' %>
	</div>

<% end %>

<% end %>