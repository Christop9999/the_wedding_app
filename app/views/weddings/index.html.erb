
          
            <!-- main right col -->
            <div class="column col-sm-10 col-xs-11" id="main">
                
               
              
                <div class="padding">
                    <div class="full col-sm-9">
                      
                        <!-- content -->                      
                        <div class="row">
                          
                         <!-- main col left --> 
                         <div class="panel panel-default">
                                <div class="panel-heading"> Wedding List
                                </div>
                                <div class="panel-body">
                        
                         <%= div_for(@weddings, class: "starter-template") do |wedding| %>
                         <div class="<%= cycle('oddrow', 'evenrow') -%>">
                            <tr>
                              

                            
                              <td><%= wedding.name %></td>
                              <td><%= wedding.bride %></td>
                              <td><%= wedding.groom %></td>
                              <td><%= wedding.date %></td>
                              <td><%= link_to 'Show', wedding %></td>
                              <td><%= link_to "Pins", wedding_pins_path(wedding)%></td>
                              <td><%= link_to "Galleries", wedding_galleries_path(wedding)%></td>

                              <% if current_user.admin %>
                              <td><%= link_to 'Edit', edit_wedding_path(wedding) %></td>
                              <td><%= link_to 'Destroy', wedding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                        </div>
                          <% end  %>
                           <% end %>
                        <br><%= link_to 'New Wedding', new_wedding_path, class: "btn btn-info" if current_user.admin%>
                              
                         
                          <%= form_tag(weddings_search_results_path, :method => "get", class: "navbar-form", id: "search-form") do %>
                          
                         
                            <div class="input-append">
                              <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Weddings" %>
                              <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
