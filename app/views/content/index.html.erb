<h1>Listing contents</h1>

<table>
  <thead>
    <tr>
      <th>Wedding</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
          <% if @content.blank? %>
        <%= link_to 'New Content', new_wedding_content_path %>
      <% else %>
      
      <td><%= link_to 'Show', wedding_content_path(@wedding, @content) %></td>
      <td> <%= link_to  image_tag(@content.header.url(:thumb)), @content.header.url(:medium)  %>  </td>
        <td><%= link_to 'Edit', edit_wedding_content_path(@wedding, @content) %></td>
        <td><%= link_to 'Destroy', wedding_content_path(@wedding, @content), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
  </tbody>
</table>

<br>


